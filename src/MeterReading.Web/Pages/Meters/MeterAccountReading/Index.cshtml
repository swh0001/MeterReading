@page
@using MeterReading.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using MeterReading.Web.Pages.Meters.MeterAccount
@using MeterReading.Localization
@using MeterReading.Web.Menus
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<MeterReadingResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["MeterAccountReading"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:MeterAccountReading"].Value);
    PageLayout.Content.MenuItemName = MeterReadingMenus.MeterAccountReading;

}

@section scripts
{
    <abp-script src="/Pages/Meters/MeterAccountReading/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Meters/MeterAccountReading/index.css" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["MeterAccountReading"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @*@if (await Authorization.IsGrantedAsync(MeterReadingPermissions.MeterAccount.Create))
